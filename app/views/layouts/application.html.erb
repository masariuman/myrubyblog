             <div style="clear: both;">&nbsp;</div>

            </div>
           </div>
          </div>
          <!-- end #page-->
          <div id="footer">
           <p>&copy; 2016, MASARIUMAN | Arif Setiawan</p>
          </div>
          <!-- en #footer-->
         </div>
         <!-- end #wrapper-->
    </body>
</html>
